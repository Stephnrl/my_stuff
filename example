---
- name: Create MDATP managed configuration directory
  ansible.builtin.file:
    path: "{{ mdatp_managed_config_path | dirname }}"
    state: directory
    mode: '0755'
    owner: root
    group: root
    recurse: true

- name: Deploy Microsoft Defender ATP managed configuration
  ansible.builtin.template:
    src: mdatp_managed.json.j2
    dest: "{{ mdatp_managed_config_path }}"
    owner: root
    group: root
    mode: '0600'
    validate: python3 -m json.tool %s
  notify: restart mdatp

- name: Enable real-time protection
  ansible.builtin.command: mdatp config real-time-protection --value enabled
  become: true
  when: mdatp_enable_realtime_protection
  changed_when: false
