################################################################################
# AWS Secrets Manager - Wiz Credentials
# These secrets store the Wiz API credentials that will be mounted into the pod
################################################################################

resource "aws_secretsmanager_secret" "wiz_client_id" {
  name                    = "wiz-connector/${var.environment}/client-id"
  description             = "Wiz API Client ID for ${var.environment} environment"
  recovery_window_in_days = 7

  tags = merge(var.additional_tags, {
    Name        = "wiz-connector-client-id-${var.environment}"
    Application = "wiz-connector"
  })
}

resource "aws_secretsmanager_secret_version" "wiz_client_id" {
  count         = var.create_secrets && var.wiz_client_id != "" ? 1 : 0
  secret_id     = aws_secretsmanager_secret.wiz_client_id.id
  secret_string = var.wiz_client_id
}

resource "aws_secretsmanager_secret" "wiz_client_secret" {
  name                    = "wiz-connector/${var.environment}/client-secret"
  description             = "Wiz API Client Secret/Token for ${var.environment} environment"
  recovery_window_in_days = 7

  tags = merge(var.additional_tags, {
    Name        = "wiz-connector-client-secret-${var.environment}"
    Application = "wiz-connector"
  })
}

resource "aws_secretsmanager_secret_version" "wiz_client_secret" {
  count         = var.create_secrets && var.wiz_client_secret != "" ? 1 : 0
  secret_id     = aws_secretsmanager_secret.wiz_client_secret.id
  secret_string = var.wiz_client_secret
}
