    limits:
      cpu: 500m      # Jobs may need burst capacity
      memory: 512Mi
  
  global:
    image:
      registry: publicregistryfedrampwizio.azurecr.us/wiz-app
      repository: wiz-broker-fips
    
    # Global resources for all components
    wiz-kubernetes-connector:
      resources:
        requests:
          cpu: 100m
          memory: 128Mi
        limits:
          cpu: 200m
          memory: 256Mi
  
  enabled: true
  
  autoCreateConnector:
    clusterFlavor: AKS
  
  wiz-broker:
    enabled: true
    
