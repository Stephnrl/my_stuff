# {{ ansible_managed }}
# Internal repositories configuration for {{ ansible_facts['distribution'] }} {{ ansible_facts['distribution_major_version'] }}

{% for repo in internal_repos %}
[{{ repo.name }}]
name={{ repo.description }}
baseurl={{ repo.baseurl }}
enabled={{ '1' if repo.enabled else '0' }}
gpgcheck={{ '1' if repo.gpgcheck else '0' }}
{% if repo.priority is defined %}
priority={{ repo.priority }}
{% endif %}
{% if jfrog_username and jfrog_password %}
username={{ jfrog_username }}
password={{ jfrog_password }}
{% endif %}
{% if repo.sslverify is defined %}
sslverify={{ '1' if repo.sslverify else '0' }}
{% endif %}
metadata_expire=300

{% endfor %}




