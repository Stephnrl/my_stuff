name: Deploy Wiz Connector

on:
  workflow_dispatch:
    inputs:
      environment:
        description: 'Target environment'
        required: true
        type: choice
        options:
          - dev
          - staging
          - prod
      namespace:
        description: 'Kubernetes namespace'
        required: false
        default: 'wiz'

jobs:
  deploy:
    runs-on: [self-hosted, internal]  # Your internal runner label
    environment: ${{ github.event.inputs.environment }}
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Azure Login
        uses: azure/login@v1
        with:
          creds: ${{ secrets.AZURE_CREDENTIALS }}

      - name: Set AKS context
        run: |
          az aks get-credentials \
            --resource-group ${{ secrets.AKS_RESOURCE_GROUP }} \
            --name ${{ secrets.AKS_CLUSTER_NAME }}

      - name: Deploy Wiz Connector
        uses: ./.github/actions/deploy-wiz-connector
        with:
          namespace: ${{ github.event.inputs.namespace }}
          values-file: 'environments/${{ github.event.inputs.environment }}/values.yaml'
          client-id: ${{ secrets.WIZ_CLIENT_ID }}
          client-token: ${{ secrets.WIZ_CLIENT_TOKEN }}
