      registry: publicregistryfedrampwizio.azurecr.us/wiz-app
      repository: wiz-broker-fips
    
    # Broker typically needs more resources (handles tunnel + API calls)
    resources:
      requests:
        cpu: 200m
        memory: 256Mi
      limits:
        cpu: 500m
        memory: 512Mi
