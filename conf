plugin: azure.azcollection.azure_rm
cloud_environment: AzureUSGovernment

# Only pull Arc machines, no regular VMs
include_vm_resource_groups: []
include_arc_resource_groups:
  - '*'

# Filter to only hosts whose name starts with TFS (case-insensitive)
include_host_filters:
  - name | upper is match('^TFS.*')

# Arc machines don't have powerstate/provisioning_state like regular VMs,
# so override the default filters that would exclude them
default_host_filters: []
