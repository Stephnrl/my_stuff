# Check Application log for last night - adjust date accordingly
Get-WinEvent -LogName "Application" | 
  Where-Object { $_.TimeCreated -gt (Get-Date).Date.AddDays(-1) } |
  Select-Object TimeCreated, LevelDisplayName, ProviderName, Message |
  Format-List

# Windows installer events
Get-WinEvent -LogName "Application" | 
  Where-Object { $_.ProviderName -like "*MsiInstaller*" -and $_.TimeCreated -gt (Get-Date).Date.AddDays(-1) } |
  Select-Object TimeCreated, Message

# Installers often drop verbose logs here
Get-ChildItem "C:\Windows\Temp" -Filter "*.log" | 
  Where-Object { $_.LastWriteTime -gt (Get-Date).Date.AddDays(-1) } |
  Select-Object FullName, LastWriteTime

Get-ChildItem "$env:TEMP" -Filter "*.log" | 
  Where-Object { $_.LastWriteTime -gt (Get-Date).Date.AddDays(-1) } |
  Select-Object FullName, LastWriteTime

Get-ChildItem "C:\inetpub\logs" -Recurse -Filter "*.log" | 
  Where-Object { $_.LastWriteTime -gt (Get-Date).Date.AddDays(-1) } |
  Select-Object FullName, LastWriteTime
