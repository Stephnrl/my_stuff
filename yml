---
# roles/monitoring/elastic_agent/handlers/main.yml

- name: restart elastic-agent
  ansible.builtin.systemd:
    name: elastic-agent
    state: restarted
    daemon_reload: yes
  listen: restart elastic-agent

- name: reload elastic-agent
  ansible.builtin.systemd:
    name: elastic-agent
    state: reloaded
  listen: reload elastic-agent
