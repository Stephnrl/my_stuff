name: Deploy Infrastructure

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]

permissions:
  id-token: write # Required for requesting the OIDC JWT Token
  contents: read  # Required for actions/checkout

jobs:
  terraform:
    runs-on: ubuntu-latest
    name: Run Terraform
    # Use a GitHub Environment for the main branch to enable manual approval gates
    environment: ${{ github.ref == 'refs/heads/main' && 'production' || 'preview' }}
    
    # Azure OIDC Authentication
    # Ensure you have set up Federated Credentials in Azure for this repo
    env:
      ARM_CLIENT_ID: ${{ secrets.AZURE_CLIENT_ID }}
      ARM_SUBSCRIPTION_ID: ${{ secrets.AZURE_SUBSCRIPTION_ID }}
      ARM_TENANT_ID: ${{ secrets.AZURE_TENANT_ID }}
      ARM_USE_OIDC: true

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      # Example 1: Planning on a Pull Request (No Apply)
      - name: Terraform Plan (PR)
        if: github.event_name == 'pull_request'
        uses: ./.github/actions/tf-runner
        with:
          terraform_version: '1.6.0'
          working_directory: './infrastructure'
          github_token: ${{ secrets.GITHUB_TOKEN }}
          apply: 'false'
          # Initialize with Azure Backend Config
          init_args: >-
            -backend-config="resource_group_name=my-terraform-rg"
            -backend-config="storage_account_name=myterraformstorage"
            -backend-config="container_name=tfstate"
            -backend-config="key=prod.terraform.tfstate"

      # Example 2: Applying on Merge to Main
      - name: Terraform Apply (Main)
        if: github.event_name == 'push' && github.ref == 'refs/heads/main'
        uses: ./.github/actions/tf-runner
        with:
          terraform_version: '1.6.0'
          working_directory: './infrastructure'
          github_token: ${{ secrets.GITHUB_TOKEN }}
          apply: 'true'
          init_args: >-
            -backend-config="resource_group_name=my-terraform-rg"
            -backend-config="storage_account_name=myterraformstorage"
            -backend-config="container_name=tfstate"
            -backend-config="key=prod.terraform.tfstate"
