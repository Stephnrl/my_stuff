# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# User specific aliases and functions
alias ll='ls -lah'
alias activate-ansible='source ~/ansible-venv/bin/activate'

# Show Ansible venv info
if [ -f ~/ansible-venv/bin/activate ]; then
    echo "Ansible venv available at ~/ansible-venv"
    echo "Run 'activate-ansible' or 'source ~/ansible-venv/bin/activate'"
fi
